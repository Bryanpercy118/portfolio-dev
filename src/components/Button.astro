        /* Estilo del botón */
        .toggle-btn {
            position: relative;
            width: 48px;
            height: 24px;
            background-color: #ccc;
            border-radius: 12px;
            cursor: pointer;
        }

        /* Estilo del interruptor */
        .toggle-btn input {
            display: none;
        }

        /* Estilo del indicador del interruptor */
        .toggle-btn .indicator {
            position: absolute;
            top: 2px;
            left: 2px;
            width: 20px;
            height: 20px;
            background-color: #fff;
            border-radius: 50%;
            transition: transform 0.3s ease-in-out;
        }

       
        .toggle-btn input:checked + .indicator {
            transform: translateX(24px);
        }
    </style>